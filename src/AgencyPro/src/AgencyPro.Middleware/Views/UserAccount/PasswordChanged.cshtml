@model AgencyPro.Core.Account.Events.PasswordChangedEvent

<h2 style="font-size: 14px; margin: 0 0 20px 0;">Hello @Model.Account.Profile.FirstName @Model.Account.Profile.LastName !</h2>
<div>
    <p>
        Your @Model.AppInfo.ApplicationName password has been changed.
        <br/>
        Username: @Model.Account.UserName
    </p>
    <p style="text-align: center">
        <a style="background: -webkit-linear-gradient(top, #4387fd, #4683ea); border-radius: 3px; color: #fff; display: inline-block; line-height: 1em; padding: 10px 18px; text-decoration: none; vertical-align: baseline;" href="@string.Format("{0}{1}", Model.Urls.Web, Model.Urls.LoginPage)" target="_blank">
            Login
        </a>
    </p>
    <p style="margin-top: 20px">
        Best regards,
        <br/>
        @Model.AppInfo.ApplicationName Team
    </p>
</div>

@section Footer
{
    <div>
        <p>
            <a href="@Model.Urls.Web" target="_blank">@Model.AppInfo.ApplicationName</a>
        </p>
        <p>
            @Model.AppInfo.Copyright - @Model.AppInfo.EmailSignature
        </p>
    </div>
}