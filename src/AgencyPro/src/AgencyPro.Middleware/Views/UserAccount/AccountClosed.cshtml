@model AgencyPro.Core.UserAccount.Events.AccountClosedEvent

<h2 style="font-size: 14px; margin: 0 0 20px 0;">Hello @Model.Account.Profile.FirstName @Model.Account.Profile.LastName !</h2>
<div>
    <p>
        We are sorry for see you leaving @Model.AppInfo.ApplicationName, hope you come back one day :)<br/>
        This email is to confirm that your account has been closed.
    </p>
    <p style="margin-top: 20px">
        Best regards,
        <br/>
        @Model.AppInfo.ApplicationName Team
    </p>
</div>

@section Footer
{
    <div>
        <p>
            <a href="@Model.AppInfo.AppUrl" target="_blank">@Model.AppInfo.ApplicationName</a>
        </p>
        <p>
            @Model.AppInfo.Copyright - @Model.AppInfo.EmailSignature
        </p>
    </div>
}