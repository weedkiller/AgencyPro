@model AgencyPro.Core.UserAccount.Events.AccountCreatedEvent

<h2 style="font-size: 14px; margin: 0 0 20px 0;">Hello @Model.Account.Profile.FirstName @Model.Account.Profile.LastName !</h2>
<div>
    <p>
        Thank you for registering your account with @Model.AppInfo.ApplicationName.
        To make sure you own the email address you provided to us, please activate your account by clicking the button bellow
    </p>
    <p style="text-align: center">
        <a style="background: -webkit-linear-gradient(top, #4387fd, #4683ea); border-radius: 3px; color: #fff; display: inline-block; line-height: 1em; padding: 10px 18px; text-decoration: none; vertical-align: baseline;"
           href="@string.Format("{0}{1}/{2}", Model.Urls.Api, Model.Urls.VerifyAccount, Model.VerificationKey)"
           target="_blank">
            Activate your account
        </a>
    </p>
    <p>
        If it was a mistake or you no longer wish to activate your account click to cancel the request
    </p>
    <p style="text-align: center">
        <a style="background: -webkit-linear-gradient(top, #FF3333, #FF3322); border-radius: 3px; color: #fff; display: inline-block; line-height: 1em; padding: 10px 18px; text-decoration: none; vertical-align: baseline;"
           href="@string.Format("{0}{1}/{2}", Model.Urls.Api, Model.Urls.CancelVerification, Model.VerificationKey)"
           target="_blank">
            Cancel account activation
        </a>
    </p>
    <p style="margin-top: 20px">
        Best regards,
        <br/>
        @Model.AppInfo.ApplicationName Team
    </p>
</div>

@section Footer
{
    <div>
        <p>
            <a href="@Model.AppInfo.AppUrl" target="_blank">@Model.AppInfo.ApplicationName</a>
        </p>
        <p>
            @Model.AppInfo.Copyright - @Model.AppInfo.EmailSignature
        </p>
    </div>
}