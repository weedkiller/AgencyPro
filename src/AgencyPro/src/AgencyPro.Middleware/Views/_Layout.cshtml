<div style="background: #f6f6f6; box-sizing: border-box; font-family: 'Open Sans', 'Helvetica', Helvetica, Arial, sans-serif; font-size: 15px; height: 100%; line-height: 1.4; margin: 0; padding: 0; width: 100% !important;">
    <table style="background: #f2f2f2; box-sizing: border-box; font-size: 15px; margin: 0; padding: 0; width: 100%;">
        <tbody>
        <tr style="box-sizing: border-box; font-size: 14px; margin: 0; padding: 0">
            <td width="600" style="box-sizing: border-box; clear: both !important; display: block !important; margin: 0 auto; max-width: 600px !important; padding: 0; vertical-align: top;" valign="top">
                <div style="box-sizing: border-box; display: block; margin: 0 auto; max-width: 600px; padding: 20px">
                    <table cellpadding="0" cellspacing="0" style="background: #fff; border: 1px solid #e9e9e9; border-radius: 3px; box-sizing: border-box; margin: 0; padding: 0; width: 100%;">
                        <tbody>
                        <tr style="box-sizing: border-box; margin: 0; padding: 0">
                            <td style="box-sizing: border-box; margin: 0; padding: 18px 30px 0px 30px; text-align: center; vertical-align: middle;" valign="center">
                                <div style="border-bottom: 1px solid #e5e5e5; padding-bottom: 23px; text-align: center">
                                    <a style="display: inline-block; text-decoration: none;" href="https://masterapi.azurewebsites.net/" target="_blank">
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr style="box-sizing: border-box; margin: 0; padding: 0">
                            <td style="box-sizing: border-box; margin: 0; padding: 30px 30px 15px 30px; vertical-align: top;" valign="top">
                                @RenderBody()
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size: 11px; padding: 0 10px; text-align: center;">
                                <hr style="background-color: #eee; border: none; color: #eee; height: 1px;">
                                <div style="padding: 10px;">
                                    Something Here
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <div style="box-sizing: border-box; clear: both; color: #999; font-size: 14px; margin: 0; padding-bottom: 20px; padding-top: 20px; width: 100%;">
                        <table style="box-sizing: border-box; font-size: 14px; margin: 0; padding: 0; width: 100%;">
                            <tbody>
                            <tr style="box-sizing: border-box; font-size: 14px; margin: 0; padding: 0">
                                <td style="box-sizing: border-box; font-size: 12px; margin: 0; padding: 0 10px; text-align: center; vertical-align: top;" align="center" valign="top">
                                    <hr style="background-color: #eee; border: none; color: #eee; height: 1px;">
                                    <div>
                                        @RenderSection("Footer")
                                    </div>
                                </td>
                            </tr>
                            <tr style="box-sizing: border-box; font-size: 14px; margin: 0; padding: 0">
                                <td style="box-sizing: border-box; font-size: 12px; margin: 0; padding: 0 0 20px; text-align: center; vertical-align: top;" align="center" valign="top">
                                    <span style="color: #777777; display: inline-block; font-size: 11px">You are receiving this email because you are on our mailing list.</span>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </td>
        </tr>
        </tbody>
    </table>
</div>