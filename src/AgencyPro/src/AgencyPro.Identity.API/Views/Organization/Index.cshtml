@model  IEnumerable<AgencyPro.Core.Organizations.ViewModels.OrganizationOutput>

<main class="two-cols-nav">
        <partial name="_SideNav" />
    <div class="right-col is-flex">
        <div class="box has-gap-left has-gap-right is-borderless is-shadowless">
            <div class="page-heading">
                <h1 class="page-title">My Organizations</h1>
            </div>
            <p style="margin-left:500px">
                <a href="/organization/new" class="button is-primary is-fullwidth">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Actions
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                          
                            <td>
                                @item.Description
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>

